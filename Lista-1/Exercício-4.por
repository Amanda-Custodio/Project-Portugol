programa {
	funcao inicio() {
		inteiro A, B, C, D, R, S
		
		escreva("Digite o valor de A", "\n")
		leia(A)
		
		escreva("Digite o valor de B", "\n")
		leia(B)
		
		escreva("Digite o valor de C", "\n")
		leia(C)
		
		R = (A + B) * (A + B)
		S = (B + C) * (B + C)
		D = (R + S) / 2
		
		escreva("O valor de D é ", D, " .")
		
		
	}
}
